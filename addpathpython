$c = @'
$AdminCheck = New-Object Security.Principal.WindowsPrincipal([Security.Principal.WindowsIdentity]::GetCurrent())
if (!($AdminCheck.IsInRole([Security.Principal.WindowsBuiltInRole]::Administrator))) {
    Start-Process powershell.exe "-NoProfile -ExecutionPolicy Bypass -Command {
        [System.Environment]::SetEnvironmentVariable('Path', 
            [System.Environment]::GetEnvironmentVariable('Path', 'Machine') + 
            ';C:\Users\Roki Garang\AppData\Local\Programs\Python\Python313', 'Machine');
        Write-Host 'Python path has been added successfully!' -ForegroundColor Green;
        pause; pause
    }" -Verb RunAs
    exit
}

[System.Environment]::SetEnvironmentVariable('Path', 
    [System.Environment]::GetEnvironmentVariable('Path', 'Machine') + 
    ';C:\Users\Roki Garang\AppData\Local\Programs\Python\Python313', 'Machine')
Write-Host "Python path has been added successfully!" -ForegroundColor Green
pause
pause
'@
iex $c
